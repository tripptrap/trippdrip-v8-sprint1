{
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "crons": [
    {
      "path": "/api/cron/process-twilio-usage",
      "schedule": "0 2 1 * *"
    },
    {
      "path": "/api/cron/process-scheduled-messages",
      "schedule": "*/5 * * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/stripe/webhook",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex"
        }
      ]
    }
  ],
  "firewall": {
    "rules": [
      {
        "name": "Allow bots for sitemap",
        "action": "bypass",
        "conditions": [
          {
            "type": "path",
            "op": "eq",
            "value": "/sitemap.xml"
          }
        ]
      },
      {
        "name": "Allow bots for robots",
        "action": "bypass",
        "conditions": [
          {
            "type": "path",
            "op": "eq",
            "value": "/robots.txt"
          }
        ]
      }
    ]
  }
}
