{
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "crons": [
    {
      "path": "/api/cron/process-scheduled-messages",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/process-drips",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/process-ai-drips",
      "schedule": "*/10 * * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/stripe/webhook",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex"
        }
      ]
    },
    {
      "source": "/api/telnyx/sms-webhook",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/telnyx/sms-webhook",
      "destination": "/api/telnyx/sms-webhook",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "telnyx-webhooks"
        }
      ]
    }
  ]
}
